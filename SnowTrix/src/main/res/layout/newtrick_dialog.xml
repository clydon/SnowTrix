<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ff313131">

<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trickRow"
        android:layout_weight="1">

        <!--<com.lydonc.trickdice.androidbootstrap.BootstrapButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:text="STANCE"
            bootstrapbutton:bb_icon_right="fa-android"
            bootstrapbutton:bb_type="primary"
            bootstrapbutton:bb_size="small"
            android:id="@+id/dButtonStance"
            android:layout_weight="3" />-->

        <com.lydonc.snowtrix.androidbootstrap.BootstrapButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:text="DIRECTION"
            bootstrapbutton:bb_icon_right="fa-android"
            bootstrapbutton:bb_type="success"
            bootstrapbutton:bb_size="small"
            android:id="@+id/dButtonDirection"
            android:layout_weight="3"
            />

        <com.lydonc.snowtrix.androidbootstrap.BootstrapButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:text="SPIN"
            bootstrapbutton:bb_icon_right="fa-android"
            bootstrapbutton:bb_type="warning"
            bootstrapbutton:bb_size="small"
            android:id="@+id/dButtonSpin"
            android:layout_weight="3" />

        <com.lydonc.snowtrix.androidbootstrap.BootstrapButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:text="GRAB"
            bootstrapbutton:bb_icon_right="fa-android"
            bootstrapbutton:bb_type="danger"
            bootstrapbutton:bb_size="small"
            android:id="@+id/dButtonGrab"
            android:layout_weight="3"
            />

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/trickRow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter trick name"
        android:gravity="center" />

</RelativeLayout>
